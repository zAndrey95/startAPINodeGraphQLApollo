{
  "name": "StartKit",
  "description": "Starter Kit to API with Node.js, GraphQL, Apollo Server, Sequelize and Postgres",
  "repository": "https://github.com/zAndrey95/startAPINodeGraphQLApollo.git",
  "author": "zAndrey95 <35850949+zAndrey95@users.noreply.github.com>",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "dependencies": {
    "apollo-server-express": "^2.20.0",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "eth-sig-util": "^3.0.1",
    "ethereumjs-util": "^7.0.8",
    "express": "^4.17.1",
    "express-jwt": "^6.0.0",
    "fs": "^0.0.1-security",
    "graphql": "^15.5.0",
    "jsonwebtoken": "^8.5.1",
    "knex": "^0.21.17",
    "ncp": "^2.0.0",
    "objection": "^2.2.14",
    "path": "^0.12.7",
    "pg": "^8.5.1",
    "pg-hstore": "^2.3.3",
    "sequelize": "^6.5.0",
    "web3": "^1.6.0"
  },
  "scripts": {
    "start": "node ./build/server.js",
    "start:prod": "yarn build && yarn run pm2:stop && yarn run pm2:start",
    "build": "tsc -p . && webpack --config webpack.config.js && ncp src/schema build/schema",
    "start:dev": "npm run build:dev",
    "build:dev": "nodemon ./src/index.ts --exec 'ts-node' ./src/index.ts -e ts,graphql",
    "dev": "concurrently \" nodemon ./build/server.js \" \" webpack --watch --config webpack.config.js\" ",
    "lint": "eslint . --ext .ts",
    "pm2:start": "pm2 start ./build/server.js --log-date-format 'DD-MM HH:mm:ss.SSS' --name app --max-restarts 5",
    "pm2:stop": "pm2 delete -s app || :"
  },
  "eslintConfig": {
    "extends": "node",
    "ignorePatterns": "node_modules"
  },
  "devDependencies": {
    "@graphql-tools/schema": "^8.3.1",
    "@types/express": "^4.17.11",
    "@types/express-jwt": "^6.0.1",
    "@types/graphql": "^14.5.0",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/node": "^14.14.25",
    "@types/pg": "^7.14.9",
    "@typescript-eslint/eslint-plugin": "^4.15.0",
    "@typescript-eslint/parser": "^4.15.0",
    "concurrently": "^5.3.0",
    "eslint": "^7.20.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-import-resolver-typescript": "^2.3.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.22.0",
    "graphql-import-node": "^0.0.4",
    "graphql-tag": "^2.11.0",
    "nodemon": "^2.0.7",
    "sequelize-graphql-schema": "^0.1.71",
    "ts-loader": "^9.2.6",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.4",
    "webpack": "^5.21.2",
    "webpack-cli": "^4.5.0",
    "webpack-graphql-loader": "^1.0.2",
    "webpack-node-externals": "^2.5.2"
  }
}
